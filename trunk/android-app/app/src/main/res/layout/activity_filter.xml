<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
<include layout="@layout/view_toolbar" />
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VISIBILITY"
        android:textSize="16dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black_text" />
        <ImageView
            android:id="@+id/line_title"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price"
            android:src="@drawable/divider_title"/>
        <RadioGroup
            android:layout_marginTop="10dp"
            android:id="@+id/rg_visibility"
            android:layout_below="@id/line_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RadioGroup>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/currents_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rg_visibility"
            android:text="CURRENTS"
            android:textSize="16dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_text" />
        <ImageView
            android:id="@+id/line_title_currents"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/currents_title"
            android:src="@drawable/divider_title"/>
        <RadioGroup
            android:layout_marginTop="10dp"
            android:id="@+id/rg_currents"
            android:layout_below="@+id/line_title_currents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RadioGroup>
        <TextView
            android:id="@+id/level"
            android:layout_below="@+id/rg_currents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LEVEL"
            android:textSize="16dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_text" />
        <ImageView
            android:id="@+id/line_title_level"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level"
            android:src="@drawable/divider_title"/>
        <RadioGroup
            android:layout_marginTop="10dp"
            android:id="@+id/rg_level"
            android:layout_below="@+id/line_title_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RadioGroup>
        <Button
            android:id="@+id/apply_filter"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:background="@color/orange"
            android:text="APPLY"
            android:layout_below="@id/rg_level"
            android:layout_width="120dp"
            android:layout_height="35dp"
            />
    </RelativeLayout>

    </ScrollView>
</LinearLayout>