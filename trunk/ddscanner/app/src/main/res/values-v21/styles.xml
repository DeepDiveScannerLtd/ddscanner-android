<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="colorAccent">@color/accent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>


    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar</item>

    </style>

    <style name="CollapseTextSize">
        <item name="android:textSize">20sp</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowColor">@color/black_text</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowDx">2</item>
    </style>

    <style name="drawer_item">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">40dp</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="TabIndicator" />

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:padding">10dp</item>
    </style>

    <style name="OrangeButtons">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:background">@drawable/orange_ripple_drawable</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="NewNotApprovedSpotsLabelBackground">
        <item name="android:background">@drawable/approve_spots_ripple_background</item>
    </style>

    <style name="DialogCloseButtonStyle">
        <item name="android:background">@drawable/dialog_button_ripple</item>
    </style>

    <style name="YesButtonDialogStyle">
        <item name="android:background">@drawable/dialog_yes_button_ripple</item>
    </style>

    <style name="NoButtonDialogStyle">
        <item name="android:background">@drawable/dialog_no_button_ripple</item>
    </style>

</resources>
