    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/divider</item>
        <item name="android:layout_marginLeft">65dp</item>
    </style>

    <style name="DividerStyleFull">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/divider</item>
    </style>

    <style name="EmptyButtons">
        <item name="android:layout_height">42dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:background">@drawable/border_with_empty_fill</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="OrangeButtons" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:background">@drawable/border_button_orange_2px</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="BlueButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blue_button_text_color</item>
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:padding">10dp</item>
    </style>

    <style name="ValidationErrorTextView">
        <item name="android:layout_marginLeft">65dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/error</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="SealifeCharachteristicTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#B2B2B2</item>
    </style>

    <style name="SealifeCharachteristicValue">
        <item name="android:layout_width">wrap_content</item>
