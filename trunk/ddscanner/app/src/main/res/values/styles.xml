<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="colorAccent">@color/orange</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:actionMenuTextColor">@color/orange</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="editTextSub" parent="Widget.AppCompat.EditText">
        <item name="android:colorFocusedHighlight">@color/primary</item>
    </style>

    <style name="drawer_item">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">40dp</item>
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar</item>

    </style>

    <style name="CollapseTextSize">
        <item name="android:textSize">20sp</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowColor">@color/black_text</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowDx">2</item>
    </style>

    <style name="AddDsCharTitleStyle">
        <item name="android:textSize">@dimen/add_ds_char_title</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">#B2B2B2</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
    </style>
    
    <style name="AddSealifeEditText">
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">#b2b2b2</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="AddDsSpinner" parent="Base.Widget.AppCompat.Spinner">

    </style>

    <style name="AddDsIconsStyle">
     <!--   <item name="android:layout_marginLeft">@dimen/add_ds_margin_left</item>
        <item name="android:layout_marginRight">@dimen/add_ds_margin_right_icon</item> -->
        <item name="android:layout_height">@dimen/add_ds_char_height</item>
        <item name="android:layout_width">@dimen/add_ds_char_width</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="TabIndicator" />

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="tabLayout" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/orange</item>
        <item name="tabIndicatorColor">@color/orange</item>
        <item name="tabTextAppearance">@style/customTabText</item>
    </style>

    <style name="ToolbarTabLayout" parent="Widget.Design.TabLayout">
    </style>

    <style name="customTabText">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="radio_button">
        <item name="android:drawablePadding">50dip</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">@color/orange</item>
    </style>

    <style name="CircularProgress" parent="Material.Drawable.CircularProgress">
        <item name="cpd_strokeColor">@color/primary</item>
        <item name="cpd_strokeSize">2dp</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Holo.Light" >
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="CharacteristicsDiveSpotListIcons">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="CharacteristicsDiveSpotListTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="ProfileNumberDivespotsSrtyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#616161</item>
        <item name="android:layout_marginLeft">7dp</item>
    </style>

