<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/need_to_login"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_nologin" />

    <TextView
        android:id="@+id/need_to_login_message"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        tools:text="Login to view profile"
        android:textColor="@color/black_text"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_open_login_screen"
        style="@style/OrangeButtons"
        android:layout_width="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginTop="250dp"
        android:paddingBottom="12dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="12dp"
        android:text="@string/login_or_sign_up" />
</RelativeLayout>