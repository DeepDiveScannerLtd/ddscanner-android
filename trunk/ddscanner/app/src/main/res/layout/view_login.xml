<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_view_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_nologin" />

    <TextView
        android:id="@+id/need_to_login_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Login to view profile"
        android:textColor="@color/black_text"
        android:textSize="20sp" />

    <Button
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="@string/sign_up"
        android:id="@+id/fb_custom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/need_to_login_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="133dp"
        style="@style/OrangeButtons" />

    <Button
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:id="@+id/custom_google"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/fb_custom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="@string/login"
        android:textColor="@color/orange"
        android:background="@drawable/splash_activity_login" />

    <TextView
        android:id="@+id/privacy_policy"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_google"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:text="@string/show_privacy_policy"
        />
</RelativeLayout>