<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/rocket" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textColor="#4e4e4e"
        android:textSize="19sp"
        android:fontFamily="sans-serif-medium"
        android:text="App is not available for a while!" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#4e4e4e"
        android:fontFamily="sans-serif"
        android:text="But we've got the icing for you... Want to test?\nType your email to be the first who licks it" />

    <EditText
        android:id="@+id/email_field"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="#73ecf1f2"
        android:inputType="textEmailAddress"
        android:paddingLeft="17dp"
        android:layout_marginTop="55dp"
        android:hint="example@gmail.com"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/btn_send"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="#ffd812"
        android:layout_marginTop="12dp"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:text="SEND" />
</LinearLayout>