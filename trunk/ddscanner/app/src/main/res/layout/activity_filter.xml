    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <com.rey.material.widget.Spinner
            android:id="@+id/object_spinner"
            style="@style/Material.Widget.Spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:dropDownWidth="150dp"
            android:gravity="center_vertical"
            android:popupBackground="@color/white"
            app:rd_style="@style/Material.Drawable.Ripple.Wave"
            app:spn_arrowColor="@android:color/transparent"
            app:spn_dividerColor="@android:color/transparent"
            app:spn_label="@string/filter_object"
            app:spn_labelEnable="true"
            app:spn_labelTextColor="@color/black_text"
            app:spn_labelTextSize="16sp"
            app:spn_popupItemAnimation="@null" />

        <ImageView
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/divider" />

        <com.rey.material.widget.Spinner
            android:id="@+id/level_spinner"
            style="@style/Material.Widget.Spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:dropDownWidth="150dp"
            android:gravity="center_vertical"
            android:popupBackground="@color/white"
            app:rd_style="@style/Material.Drawable.Ripple.Wave"
            app:spn_arrowColor="@android:color/transparent"
            app:spn_dividerColor="@android:color/transparent"
            app:spn_label="@string/filter_label"
            app:spn_labelEnable="true"
            app:spn_labelTextColor="@color/black_text"
            app:spn_labelTextSize="16sp"
            app:spn_popupItemAnimation="@null" />
    </LinearLayout>

    <ImageView
        style="@style/DividerStyleFull"/>

    <com.rey.material.widget.Button
        android:id="@+id/applyFilters"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
