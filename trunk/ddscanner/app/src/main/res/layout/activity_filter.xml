<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fbfbfb"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/toprate_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="18dp"
            android:src="@drawable/ic_toprate_filter" />

        <TextView
            android:id="@+id/toprate_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="26dp"
            android:layout_toRightOf="@+id/toprate_icon"
            android:gravity="center"
            android:text="@string/filter_only_best_rated"
            android:textColor="@color/black_text"
            android:textSize="16sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/only_rated_switch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:layout_toRightOf="@+id/toprate_text"
            android:checked="true"
            android:theme="@style/Color1SwitchStyle" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/divider" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:src="@drawable/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:paddingTop="22dp"
            android:text="@string/filters_filters"
            android:textColor="#a3a3a3"
            android:textSize="16sp" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/divider"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="@color/white">
        <com.rey.material.widget.Spinner
            android:id="@+id/object_spinner"
            style="@style/Material.Widget.Spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:rd_style="@style/Material.Drawable.Ripple.Wave"
            app:spn_label="Level"
            app:spn_labelEnable="true"
            app:spn_labelTextColor="@color/black_text"
            app:spn_labelTextSize="16sp"
            app:spn_popupItemAnimation="@null"
            app:spn_dividerColor="@android:color/transparent"
            app:spn_arrowColor="@android:color/transparent"
            android:popupBackground="@color/white"
            android:dropDownWidth="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>
            <ImageView
            android:id="@+id/divider"
            android:layout_marginLeft="20dp"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/divider"/>
        <com.rey.material.widget.Spinner
            android:id="@+id/level_spinner"
            style="@style/Material.Widget.Spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:rd_style="@style/Material.Drawable.Ripple.Wave"
            app:spn_label="Level"
            app:spn_labelEnable="true"
            app:spn_labelTextColor="@color/black_text"
            app:spn_labelTextSize="16sp"
            app:spn_popupItemAnimation="@null"
            app:spn_dividerColor="@android:color/transparent"
            app:spn_arrowColor="@android:color/transparent"
            android:popupBackground="@color/white"
            android:dropDownWidth="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/divider"/>

    <com.rey.material.widget.Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/orange"
        android:text="@string/btn_save"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:rd_style="@style/Material.Drawable.Ripple.Touch.MatchView"/>

</LinearLayout>