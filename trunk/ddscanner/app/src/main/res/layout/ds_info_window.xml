<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:background="@drawable/only_top_image_border">
    <ImageView
        android:id="@+id/popup_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/list_photo_default"
        android:background="@drawable/only_top_image_border"
        android:padding="5dp"/>
    <TextView
        android:id="@+id/popup_product_name"
        android:layout_toRightOf="@+id/popup_photo"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Blue Hole"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black_text"
        />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/stars"
        android:layout_toRightOf="@+id/popup_photo"
        android:layout_below="@+id/popup_product_name"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" />
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/reviews"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:textSize="10sp"
            android:textColor="#9f9f9f"
            android:layout_toRightOf="@+id/stars"
            android:layout_below="@id/popup_product_name"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:text="reviews"/>
    <TextView
        android:textColor="#707070"
        android:layout_marginTop="5dp"
        android:id="@+id/description_popup"
        android:layout_below="@+id/stars"
        android:layout_toRightOf="@+id/popup_photo"
        android:lines="1"
        android:ellipsize="end"
        android:layout_width="220dp"
        android:text="Very beautiful dive site for diving bla bla bla"
        android:textSize="14dp"
        android:layout_height="wrap_content"
        />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_marginRight="5dp"
            android:layout_height="10dp"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@+id/description_popup"
            android:src="@drawable/ic_arrow_reviews"/>
    </RelativeLayout>
    <ImageView
        android:layout_below="@+id/top"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:src="@drawable/triangle"/>
</RelativeLayout>