<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="285dp"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="right"
        android:src="@drawable/ic_profilecard_close"
        android:scaleType="center"
        android:background="@drawable/border_left_bottom"/>
    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_marginRight="23dp"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:orientation="vertical"
            android:background="@drawable/shape_gray_oval"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_comment_reviews"/>
            <TextView
                android:id="@+id/comments"
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textSize="12sp"
                android:textColor="#616161"
                android:text="200"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/userAvatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/avatar_profilecard"/>
        <LinearLayout
            android:layout_marginLeft="23dp"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:orientation="vertical"
            android:background="@drawable/shape_gray_oval"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_like_review"/>
            <TextView
                android:id="@+id/likes"
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textSize="12sp"
                android:textColor="#616161"
                android:text="200"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/name"
        android:layout_marginTop="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jason statham"
        android:textSize="18sp"
        android:textColor="@color/black_text"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="14dp"
        android:layout_marginTop="8dp">
        <TextView
            android:textSize="13sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#ed1b24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="expert"/>
    </LinearLayout>
    <TextView
        android:id="@+id/about"
        android:gravity="center"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#616161"
        android:text="Info about me"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:src="@drawable/divider"/>
        <TextView
            android:textSize="10sp"
            android:textColor="#616161"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="95dp"
            android:background="@drawable/border_profile_card_dive_spots"
            android:layout_height="23dp"
            android:text="@string/dive_spots"/>
        <ImageView
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:src="@drawable/divider"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="95dp"
            android:layout_height="47dp">
            <TextView
                android:id="@+id/checkIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="890"
                android:fontFamily="sans-serif-medium"
                android:textSize="16sp"
                android:textColor="@color/primary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/check_in"
                android:fontFamily="sans-serif-medium"
                android:textSize="10sp"
                android:textColor="#616161"/>
        </LinearLayout>
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="1px"
            android:background="#d1d1d1"
            android:layout_height="27dp" />
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="95dp"
            android:layout_height="47dp">
            <TextView
                android:id="@+id/added"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:fontFamily="sans-serif-medium"
                android:textSize="16sp"
                android:textColor="@color/primary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/added"
                android:fontFamily="sans-serif-medium"
                android:textSize="10sp"
                android:textColor="#616161"/>
        </LinearLayout>
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="1px"
            android:background="#d1d1d1"
            android:layout_height="27dp" />
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="95dp"
            android:layout_height="47dp">
            <TextView
                android:id="@+id/edited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="55"
                android:fontFamily="sans-serif-medium"
                android:textSize="16sp"
                android:textColor="@color/primary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edited"
                android:fontFamily="sans-serif-medium"
                android:textSize="10sp"
                android:textColor="#616161"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/divider"
        android:layout_marginTop="17dp"/>
    <LinearLayout
        android:id="@+id/link"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="#f6f6f6">
        <TextView
            android:id="@+id/linkText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="OPEN ON FACEBOOK"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            android:textColor="@color/primary"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>