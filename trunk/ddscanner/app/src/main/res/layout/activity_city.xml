<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/city_toolbar" />

        <android.support.design.widget.TabLayout
            android:id="@+id/place_sliding_tabs"
            style="@style/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            app:tabMode="scrollable" />

        <android.support.v4.view.ViewPager
            android:id="@+id/place_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/request_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginTop="105dp"
        android:background="@android:color/transparent"
        android:indeterminateOnly="true"
        android:indeterminateTint="@color/primary"
        android:indeterminateTintMode="src_in"
        android:progressTint="@color/primary"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="123dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="Please zoom in to see dive spots"
            android:textSize="16sp" />
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:src="@drawable/ic_filter"
        android:visibility="gone"
        app:backgroundTint="@color/orange"
        app:elevation="3dp"
        app:pressedTranslationZ="12dp" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="20dp"
        android:src="@drawable/ic_feedback"
        android:visibility="gone"
        app:backgroundTint="@color/white"
        app:elevation="3dp"
        app:pressedTranslationZ="12dp" />

    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/filterButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/top_border"
            android:src="@drawable/ic_filter" />

        <ImageButton
            android:id="@+id/feedbackFloat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/filterButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:background="@drawable/bottom_border"
            android:src="@drawable/ic_feedback" />
    </RelativeLayout>

</RelativeLayout>
