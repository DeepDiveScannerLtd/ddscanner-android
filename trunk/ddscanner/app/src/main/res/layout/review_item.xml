<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="15dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="11dp"
            android:layout_marginTop="13dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/avatar_profile_default" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/nameAndStars"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:ellipsize="end"
                        android:lines="1"
                        tools:text="Andrei Lashkevich"
                        android:textColor="@color/black_text"
                        android:textSize="18sp" />

                    <com.ddscanner.ui.views.RatingView
                        android:id="@+id/stars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/overflow"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_rw_more"/>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            tools:text="Vwry very good spot in whateewer very good play market bla bla bla bla "
            android:textColor="@color/black_text"
            android:textSize="14sp" />
        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show more"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/primary"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            android:gravity="left|center"
            android:id="@+id/button_toggle"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/review_photos_rc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:visibility="visible" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/sealifes_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f6f6f6">
        <ImageView
            style="@style/DividerStyleFull" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/sealifes_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:paddingRight="15dp">

        <com.ddscanner.ui.views.LikeView
            android:id="@+id/like_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <com.ddscanner.ui.views.DislikeView
            android:layout_toRightOf="@+id/like_layout"
            android:id="@+id/dislike_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />

        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#a3a3a3"
            android:layout_gravity="right"
            android:textSize="13sp" />
    </RelativeLayout>
</LinearLayout>