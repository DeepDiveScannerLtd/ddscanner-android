<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fbfbfb">

    <include layout="@layout/view_toolbar"/>

    <com.rey.material.widget.ProgressView
        android:layout_gravity="center"
        android:id="@+id/progressBarFull"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        app:pv_autostart="true"
        app:pv_circular="true"
        app:pv_progressMode="indeterminate"
        app:pv_progressStyle="@style/CircularProgress" />

    <ScrollView
        android:id="@+id/main_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <TextView
                    android:id="@+id/add_photo_title"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#b2b2b2"
                    android:text="Add divespot's photo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="PHOTOS"
                    android:textColor="@color/black_text"
                    android:textSize="15sp" />

                <ImageButton
                    android:id="@+id/btn_add_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:clickable="true"
                    android:background="@drawable/ic_plus_addds" />
                <android.support.v7.widget.RecyclerView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/btn_add_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:id="@+id/photos_rc"/>

            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/divider"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/error_images"
                style="@style/ValidationErrorTextView" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/divider"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/location_layout"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/CharacteristicsDiveSpotListIcons"
                        android:src="@drawable/ic_addds_location" />

                    <TextView
                        android:id="@+id/location"
                        style="@style/AddDsCharTitleStyle"
                        android:text="@string/location"
                        android:textColor="#b2b2b2"/>
                </LinearLayout>
                <ImageView style="@style/DividerStyle" />
                <TextView
                    android:id="@+id/error_location"
                    style="@style/ValidationErrorTextView" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/CharacteristicsDiveSpotListIcons"
                        android:src="@drawable/ic_addds_spotname" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/name"
                        style="@style/AddDsCharTitleStyle"
                        android:hint="@string/name" />
                </LinearLayout>

                <ImageView style="@style/DividerStyle" />
                <TextView
                    android:id="@+id/error_name"
                    style="@style/ValidationErrorTextView" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/CharacteristicsDiveSpotListIcons"
                        android:src="@drawable/ic_addds_deep" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/depth"
                        style="@style/AddDsCharTitleStyle"
                        android:hint="@string/max_depth_meters" />
                </LinearLayout>

                <ImageView style="@style/DividerStyle" />
                <TextView
                    android:id="@+id/error_depth"
                    style="@style/ValidationErrorTextView" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/CharacteristicsDiveSpotListIcons"
                        android:src="@drawable/ic_addds_visibility" />
                    <com.rey.material.widget.Spinner
                        android:id="@+id/visibility_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:gravity="center_vertical"
                        app:rd_style="@style/Material.Drawable.Ripple.Wave"
                        app:spn_label="Visibility"
                        app:spn_labelEnable="true"
                        app:spn_labelTextColor="@color/black_text"
                        app:spn_labelTextSize="16sp"
                        app:spn_popupItemAnimation="@null"
                        app:spn_dividerColor="@android:color/transparent"
                        app:spn_arrowColor="@android:color/transparent"
                        android:popupBackground="@color/white"
                        android:dropDownWidth="150dp"/>

                </LinearLayout>

                <ImageView style="@style/DividerStyle" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/CharacteristicsDiveSpotListIcons"
                        android:src="@drawable/ic_addds_currents" />
                    <com.rey.material.widget.Spinner
                        android:id="@+id/currents_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:gravity="center_vertical"
                        app:rd_style="@style/Material.Drawable.Ripple.Wave"
                        app:spn_label="Current"
                        app:spn_labelEnable="true"
                        app:spn_labelTextColor="@color/black_text"
                        app:spn_labelTextSize="16sp"
                        app:spn_popupItemAnimation="@null"
                        app:spn_dividerColor="@android:color/transparent"
                        app:spn_arrowColor="@android:color/transparent"
                        android:popupBackground="@color/white"
                        android:dropDownWidth="150dp"/>

                </LinearLayout>

                <ImageView style="@style/DividerStyle" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/CharacteristicsDiveSpotListIcons"
                        android:src="@drawable/ic_addds_level" />
                    <com.rey.material.widget.Spinner
                        android:id="@+id/level_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:gravity="center_vertical"
                        app:rd_style="@style/Material.Drawable.Ripple.Wave"
                        app:spn_label="Level"
                        app:spn_labelEnable="true"
                        app:spn_labelTextColor="@color/black_text"
                        app:spn_labelTextSize="16sp"
                        app:spn_popupItemAnimation="@null"
                        app:spn_dividerColor="@android:color/transparent"
                        app:spn_arrowColor="@android:color/transparent"
                        android:popupBackground="@color/white"
                        android:dropDownWidth="150dp"/>

                </LinearLayout>

                <ImageView style="@style/DividerStyle" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/CharacteristicsDiveSpotListIcons"
                        android:src="@drawable/ic_addds_object" />
                    <com.rey.material.widget.Spinner
                        android:id="@+id/object_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:gravity="center_vertical"
                        app:rd_style="@style/Material.Drawable.Ripple.Wave"
                        app:spn_label="Object"
                        app:spn_labelEnable="true"
                        app:spn_labelTextColor="@color/black_text"
                        app:spn_labelTextSize="16sp"
                        app:spn_popupItemAnimation="@null"
                        app:spn_dividerColor="@android:color/transparent"
                        app:spn_arrowColor="@android:color/transparent"
                        android:popupBackground="@color/white"
                        android:dropDownWidth="150dp"/>

                </LinearLayout>

                <ImageView style="@style/DividerStyle" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_height="56dp"
                        style="@style/CharacteristicsDiveSpotListIcons"
                        android:src="@drawable/ic_addds_desc" />

                    <android.support.v7.widget.AppCompatEditText
                        android:layout_marginTop="18dp"
                        android:id="@+id/description"
                        android:layout_height="wrap_content"
                        style="@style/AddDsCharTitleStyle"
                        android:hint="@string/description" />
                </LinearLayout>
                <TextView
                    android:id="@+id/error_description"
                    style="@style/ValidationErrorTextView" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/divider"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/divider"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop"/>
            <RelativeLayout
                android:layout_below="@+id/characteristics_layout"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/sealife"
                    android:textColor="@color/black_text"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/add_sealife_text"
                    android:layout_marginTop="87dp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#b2b2b2"
                    android:text="@string/add_sealife"/>
                <ImageView
                    android:id="@+id/btn_add_sealife"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_plus_addds" />
                <android.support.v7.widget.RecyclerView
                    android:visibility="visible"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_below="@+id/btn_add_sealife"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sealifes_rc"/>
            </RelativeLayout>
            <ImageView
                style="@style/DividerStyle"
                />
            <TextView
                android:id="@+id/error_sealife"
                style="@style/ValidationErrorTextView" />
            <Button
                android:id="@+id/button_create"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:textColor="@color/black_text"
                android:text="@string/btn_save"
                android:background="@drawable/border_button_orange_2px"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>