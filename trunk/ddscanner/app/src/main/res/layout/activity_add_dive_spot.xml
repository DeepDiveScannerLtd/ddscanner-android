<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbfbfb"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar" />

    <com.rey.material.widget.ProgressView
        android:id="@+id/progressBarFull"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        app:pv_autostart="true"
        app:pv_circular="true"
        app:pv_progressMode="indeterminate"
        android:visibility="gone"
        app:pv_progressStyle="@style/CircularProgress" />

    <ScrollView
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/photos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/photos_title"
                    style="@style/PhotosTabActive"/>
                <TextView
                    android:id="@+id/maps"
                    android:layout_toRightOf="@+id/photos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/maps"
                    android:layout_marginTop="15dp"
                    style="@style/PhotosTabDisabled"/>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/photos_rc"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_below="@+id/maps"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/maps_rc"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="90dp"
                    android:layout_below="@+id/maps"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"/>

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/divider" />

            <TextView
                android:id="@+id/error_images"
                style="@style/ValidationErrorTextView" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/location_layout"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/CharacteristicsDiveSpotListIcons"
                        android:src="@drawable/ic_addds_location" />

                    <TextView
                        android:id="@+id/location"
                        style="@style/AddDsCharTitleStyle"
                        android:text="@string/location"
                        android:textColor="#b2b2b2" />
                </LinearLayout>

                <ImageView style="@style/DividerStyle" />

                <TextView
                    android:id="@+id/error_location"
                    style="@style/ValidationErrorTextView" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/CharacteristicsDiveSpotListIcons"
                        android:src="@drawable/ic_addds_spotname" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/name"
                        style="@style/AddDsCharTitleStyle"
                        android:hint="@string/name" />
                </LinearLayout>

                <ImageView style="@style/DividerStyle" />

                <TextView
                    android:id="@+id/error_name"
                    style="@style/ValidationErrorTextView" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/CharacteristicsDiveSpotListIcons"
                        android:src="@drawable/ic_addds_deep" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/depth"
                        style="@style/AddDsCharTitleStyle"
                        android:hint="@string/max_depth_meters"
                        android:inputType="number"
                        android:maxLength="5" />
                </LinearLayout>

                <ImageView style="@style/DividerStyle" />

                <TextView
                    android:id="@+id/error_depth"
                    style="@style/ValidationErrorTextView" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/CharacteristicsDiveSpotListIcons"
                        android:src="@drawable/ic_addds_visibility" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:text="@string/details_visibility"
                        android:textColor="#B2B2B2"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/minVisibility"
                        style="@style/AddDsCharTitleStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:hint="@string/min"
                        android:inputType="number"
                        android:maxLength="5"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp" />

                    <EditText
                        android:id="@+id/maxVisibility"
                        style="@style/AddDsCharTitleStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:hint="@string/max"
                        android:inputType="number"
                        android:maxLength="5"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp" />

                </LinearLayout>

                <ImageView style="@style/DividerStyle" />

                <TextView
                    android:id="@+id/error_visibility_min"
                    style="@style/ValidationErrorTextView" />

                <TextView
                    android:id="@+id/error_visibility_max"
                    style="@style/ValidationErrorTextView" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/CharacteristicsDiveSpotListIcons"
                        android:src="@drawable/ic_addds_currents" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="17dp"
                            android:text="@string/current"
                            android:textColor="#B2B2B2"
                            android:textSize="16sp" />

                        <com.rey.material.widget.Spinner
                            android:id="@+id/currents_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:dropDownWidth="150dp"
                            android:gravity="center_vertical"
                            android:popupBackground="@color/white"
                            app:popupTheme="@style/AppTheme.PopupOverlay"
                            app:rd_style="@style/Material.Drawable.Ripple.Wave"
                            app:spn_arrowColor="@android:color/transparent"
                            app:spn_dividerColor="@android:color/transparent"
                            app:spn_popupItemAnimation="@null" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView style="@style/DividerStyle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/CharacteristicsDiveSpotListIcons"
                        android:src="@drawable/ic_addds_level" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="17dp"
                            android:text="@string/level"
                            android:textColor="#B2B2B2"
                            android:textSize="16sp" />

                        <com.rey.material.widget.Spinner
                            android:id="@+id/level_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:dropDownWidth="150dp"
                            android:gravity="center_vertical"
                            android:popupBackground="@color/white"
                            app:popupTheme="@style/AppTheme.PopupOverlay"
                            app:rd_style="@style/Material.Drawable.Ripple.Wave"
                            app:spn_arrowColor="@android:color/transparent"
                            app:spn_dividerColor="@android:color/transparent"
                            app:spn_popupItemAnimation="@null" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView style="@style/DividerStyle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/CharacteristicsDiveSpotListIcons"
                        android:src="@drawable/ic_addds_object" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="17dp"
                            android:text="@string/object"
                            android:textColor="#B2B2B2"
                            android:textSize="16sp" />

                        <com.rey.material.widget.Spinner
                            android:id="@+id/object_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:dropDownWidth="150dp"
                            android:gravity="center_vertical"
                            android:popupBackground="@color/white"
                            app:popupTheme="@style/AppTheme.PopupOverlay"
                            app:rd_style="@style/Material.Drawable.Ripple.Wave"
                            app:spn_arrowColor="@android:color/transparent"
                            app:spn_dividerColor="@android:color/transparent"
                            app:spn_popupItemAnimation="@null" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView style="@style/DividerStyle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/CharacteristicsDiveSpotListIcons"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_addds_desc" />

                    <android.support.v7.widget.AppCompatEditText
                        android:paddingRight="10dp"
                        android:id="@+id/description"
                        style="@style/AddDsCharTitleStyle"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:fontFamily="sans-serif"
                        android:hint="@string/description_at_least_150_symbols"
                        android:paddingBottom="7dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/error_description"
                    style="@style/ValidationErrorTextView" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/divider" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/sealife"
                    android:textColor="@color/black_text"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/add_sealife_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="87dp"
                    android:text="@string/add_sealife"
                    android:textColor="#b2b2b2"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/btn_add_sealife"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:scaleType="fitCenter"
                    android:paddingLeft="15dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_addds_plus" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/sealifes_rc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_add_sealife"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp"
                    android:visibility="visible" />
            </RelativeLayout>

            <ImageView style="@style/DividerStyle" />

            <TextView
                android:id="@+id/error_sealife"
                style="@style/ValidationErrorTextView" />

            <Button
                android:id="@+id/button_create"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/border_button_orange_2px"
                android:text="@string/btn_save"
                android:textColor="@color/black_text"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>