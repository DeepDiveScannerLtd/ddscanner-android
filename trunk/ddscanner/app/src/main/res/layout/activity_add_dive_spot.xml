<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/primary"
        android:minHeight="?actionBarSize"
        android:transitionName="toolbar"
        auto:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        auto:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/add_photo_layout"
                android:background="#F9F9F9"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#b2b2b2"
                    android:text="Add divespot's photo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="PHOTOS"
                    android:textColor="@color/black_text"
                    android:textSize="15sp" />

                <ImageButton
                    android:id="@+id/btn_add_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ic_plus_addds" />
                <android.support.v7.widget.RecyclerView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/btn_add_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:id="@+id/photos_rc"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/characteristics_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_photo_layout"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/characteristic_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/characteristic_location_icon"
                        style="@style/AddDsIconsStyle">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_location_addds" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/characteristic_location_title"
                        style="@style/AddDsCharTitleStyle"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_toRightOf="@+id/characteristic_location_icon"
                        android:text="Location" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/characteristic_location_title"
                        android:layout_toRightOf="@+id/characteristic_location_icon"
                        android:src="@drawable/divider" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/characteristic_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/characteristic_location">

                    <RelativeLayout
                        android:id="@+id/characteristic_name_icon"
                        style="@style/AddDsIconsStyle">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_spotname_addds" />
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/characteristic_name_title"
                        style="@style/AddDsCharTitleStyle"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_toRightOf="@+id/characteristic_name_icon"
                        android:hint="Name" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/characteristic_name_title"
                        android:layout_toRightOf="@+id/characteristic_name_icon"
                        android:src="@drawable/divider" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/characteristic_depth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/characteristic_name">

                    <RelativeLayout
                        android:id="@+id/characteristic_depth_icon"
                        style="@style/AddDsIconsStyle">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_list_deep_addds" />
                    </RelativeLayout>

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/characteristic_depth_title"
                        style="@style/AddDsCharTitleStyle"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_toRightOf="@+id/characteristic_depth_icon"
                        android:hint="Max depth (meters)" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/characteristic_depth_title"
                        android:layout_toRightOf="@+id/characteristic_depth_icon"
                        android:src="@drawable/divider" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/characteristic_visibility"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/characteristic_depth">

                    <RelativeLayout
                        android:id="@+id/characteristic_visibility_icon"
                        style="@style/AddDsIconsStyle">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_list_visibility_addds" />
                    </RelativeLayout>

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/characteristic_visibility_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_marginRight="20dp"
                        android:layout_toRightOf="@+id/characteristic_visibility_icon"
                        app:ms_hint="hint" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/characteristic_visibility_spinner"
                        android:layout_toRightOf="@+id/characteristic_visibility_icon"
                        android:src="@drawable/divider" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/characteristic_currents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/characteristic_visibility">

                    <RelativeLayout
                        android:id="@+id/characteristic_currents_icon"
                        style="@style/AddDsIconsStyle">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_list_currents_addds" />
                    </RelativeLayout>

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/characteristic_currents_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_marginRight="20dp"
                        android:layout_toRightOf="@+id/characteristic_currents_icon"
                        app:ms_hint="hint" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/characteristic_currents_spinner"
                        android:layout_toRightOf="@+id/characteristic_currents_icon"
                        android:src="@drawable/divider" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/characteristic_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/characteristic_currents">

                    <RelativeLayout
                        android:id="@+id/characteristic_level_icon"
                        style="@style/AddDsIconsStyle">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_list_level_addds" />
                    </RelativeLayout>

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/characteristic_level_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_marginRight="20dp"
                        android:layout_toRightOf="@+id/characteristic_level_icon"
                        app:ms_hint="hint" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/characteristic_level_spinner"
                        android:layout_toRightOf="@+id/characteristic_level_icon"
                        android:src="@drawable/divider" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/characteristic_object"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/characteristic_level">

                    <RelativeLayout
                        android:id="@+id/characteristic_object_icon"
                        style="@style/AddDsIconsStyle">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_list_object_addds" />
                    </RelativeLayout>

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/characteristic_object_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_marginRight="20dp"
                        android:layout_toRightOf="@+id/characteristic_object_icon"
                        app:ms_hint="hint" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/characteristic_object_spinner"
                        android:layout_toRightOf="@+id/characteristic_object_icon"
                        android:src="@drawable/divider" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/characteristic_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/characteristic_object">

                    <RelativeLayout
                        android:id="@+id/characteristic_description_icon"
                        style="@style/AddDsIconsStyle">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_list_description" />
                    </RelativeLayout>

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/characteristic_description_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="13dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="13dp"
                        android:layout_toRightOf="@+id/characteristic_description_icon"
                        android:background="@android:color/transparent"
                        android:hint="Description"
                        android:textColorHint="#B2B2B2"
                        android:textSize="@dimen/add_ds_char_title" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/sealife_layout"
                android:layout_below="@+id/characteristics_layout"
                android:layout_width="match_parent"
                android:background="#F9F9F9"
                android:layout_height="100dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="SEALIFE"
                    android:textColor="@color/black_text"
                    android:textSize="15sp" />
                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#b2b2b2"
                    android:text="Add sealife"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_plus_addds" />
            </RelativeLayout>
            <Button
                android:id="@+id/button_create"
                android:layout_below="@+id/sealife_layout"
                android:layout_width="120dp"
                android:layout_height="38dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="63dp"
                android:background="@color/orange"
                android:text="CREATE"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>