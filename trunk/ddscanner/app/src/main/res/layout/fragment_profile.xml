<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/user_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="32dp"
                    android:src="@drawable/avatar_profile_default" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textColor="@color/black_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/user_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="43dp"
                    android:layout_marginRight="43dp"
                    android:gravity="center"
                    android:textColor="#616161"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <ImageView style="@style/DividerStyleFull" />

                <android.support.percent.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/comments_layout"
                        android:layout_height="64dp"
                        android:layout_alignParentLeft="true"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_widthPercent="33%">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/reviews_profile"
                            android:textColor="#a3a3a3"
                            android:textSize="11sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_comment_profile" />

                            <TextView
                                android:id="@+id/user_comments"
                                style="@style/ProfileNumberDivespotsSrtyle"
                                tools:text="321" />
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/likeLayout"
                        android:layout_height="64dp"
                        android:layout_centerHorizontal="true"
                        android:background="?attr/selectableItemBackground"
                        app:layout_widthPercent="33%">

                        <View
                            android:layout_width="2dp"
                            android:layout_height="32dp"
                            android:layout_centerVertical="true"
                            android:background="#f0f0f0" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="32dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="#f0f0f0" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-medium"
                                android:text="@string/likes_profile"
                                android:textColor="#a3a3a3"
                                android:textSize="11sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_like_profile" />

                                <TextView
                                    android:id="@+id/user_likes"
                                    style="@style/ProfileNumberDivespotsSrtyle"
                                    tools:text="321" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/dislikeLayout"
                        android:layout_height="64dp"
                        android:layout_alignParentRight="true"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_widthPercent="33%">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/dislikes"
                            android:textColor="#a3a3a3"
                            android:textSize="11sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_dislike_profile" />

                            <TextView
                                android:id="@+id/user_dislikes"
                                style="@style/ProfileNumberDivespotsSrtyle"
                                tools:text="321" />
                        </LinearLayout>
                    </LinearLayout>
                </android.support.percent.PercentRelativeLayout>
            </LinearLayout>

            <ImageView style="@style/DividerStyleFull" />

            <ImageView
                style="@style/DividerStyleFull"
                android:layout_marginTop="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/no_achievements_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_title_yet"
                    android:paddingBottom="12dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="12dp"
                    android:textColor="#a3a3a3"
                    android:textSize="15sp"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/achievment_rv"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="12dp" />

                <ImageView style="@style/DividerStyleFull" />

                <RelativeLayout
                    android:id="@+id/show_achievments_details"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp">

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/path_1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_toRightOf="@+id/icon"
                        android:fontFamily="sans-serif-medium"
                        android:text="Show details"
                        android:textColor="@color/black_text"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/ic_arrow" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView style="@style/DividerStyleFull" />

            <ImageView
                style="@style/DividerStyleFull"
                android:layout_marginTop="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/checkins_activity"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <ImageView
                        style="@style/CharacteristicsDiveSpotListIcons"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_profile_checkin" />

                    <LinearLayout
                        android:layout_width="258dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            style="@style/CharacteristicsDiveSpotListTitle"
                            android:text="@string/checkin" />

                        <TextView
                            android:id="@+id/checkin_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/ic_arrow" />
                </LinearLayout>

                <ImageView style="@style/DividerStyle" />

                <LinearLayout
                    android:id="@+id/created_activity"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <ImageView
                        style="@style/CharacteristicsDiveSpotListIcons"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_profile_added" />

                    <LinearLayout
                        android:layout_width="258dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            style="@style/CharacteristicsDiveSpotListTitle"
                            android:text="@string/created" />

                        <TextView
                            android:id="@+id/added_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/ic_arrow" />
                </LinearLayout>

                <ImageView style="@style/DividerStyle" />

                <LinearLayout
                    android:id="@+id/edited_activity"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <ImageView
                        style="@style/CharacteristicsDiveSpotListIcons"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_profile_edited" />

                    <LinearLayout
                        android:layout_width="258dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            style="@style/CharacteristicsDiveSpotListTitle"
                            android:text="@string/edited_low" />

                        <TextView
                            android:id="@+id/edited_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/ic_arrow" />
                </LinearLayout>

                <ImageView style="@style/DividerStyle" />

                <LinearLayout
                    android:id="@+id/favorites_activity"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <ImageView
                        style="@style/CharacteristicsDiveSpotListIcons"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_profile_fav" />

                    <LinearLayout
                        android:layout_width="258dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            style="@style/CharacteristicsDiveSpotListTitle"
                            android:text="@string/favourites" />

                        <TextView
                            android:id="@+id/favourites_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/ic_arrow" />
                </LinearLayout>

                <ImageView
                    style="@style/DividerStyleFull"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:id="@+id/edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/CharacteristicsDiveSpotListIcons"
                        android:src="@drawable/ic_profile_edit" />

                    <TextView
                        android:id="@+id/textView2"
                        style="@style/CharacteristicsDiveSpotListTitle"
                        android:layout_width="258dp"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center_vertical"
                        android:text="@string/edit_profile" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/ic_arrow" />
                </LinearLayout>

                <ImageView style="@style/DividerStyleFull" />

                <LinearLayout
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/CharacteristicsDiveSpotListIcons"
                        android:src="@drawable/ic_profile_logout" />

                    <TextView
                        style="@style/CharacteristicsDiveSpotListTitle"
                        android:layout_width="258dp"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center_vertical"
                        android:text="Log out" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/ic_arrow" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/about_dss_layout"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/CharacteristicsDiveSpotListIcons"
                        android:src="@drawable/shape" />

                    <TextView
                        style="@style/CharacteristicsDiveSpotListTitle"
                        android:layout_width="258dp"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center_vertical"
                        android:text="@string/about_dds"
                        android:textColor="#a3a3a3" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/editProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/capture_photo"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:background="@drawable/shape_gray_oval"
                    android:gravity="center"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_attach_camera" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="31dp"
                    android:layout_marginRight="31dp"
                    android:background="@drawable/shape_gray_oval"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/user_chosed_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pick_photo_from_gallery"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:background="@drawable/shape_gray_oval"
                    android:gravity="center"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_attach_gallery" />
                </LinearLayout>
            </LinearLayout>

            <ImageView style="@style/DividerStyleFull" />

            <ImageView
                style="@style/DividerStyleFull"
                android:layout_marginTop="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="70dp"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <ImageView
                        style="@style/CharacteristicsDiveSpotListIcons"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/ic_profile_user" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/name_title"
                                style="@style/AddDsCharTitleStyle"
                                android:layout_height="wrap_content"
                                android:text="@string/full_name"
                                android:textColor="#B2B2B2" />

                            <TextView
                                android:id="@+id/name_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:paddingRight="10dp"
                                android:textColor="#b2b2b2"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <EditText
                            android:id="@+id/fullName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:background="@android:color/transparent"
                            android:hint="Full name"
                            android:maxLength="30"
                            android:text=""
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView style="@style/DividerStyle" />

                <TextView
                    android:id="@+id/error_name"
                    style="@style/ValidationErrorTextView" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:minHeight="70dp"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <ImageView
                        style="@style/CharacteristicsDiveSpotListIcons"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/ic_profile_about" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/about_title"
                                style="@style/AddDsCharTitleStyle"
                                android:layout_height="wrap_content"
                                android:text="@string/about"
                                android:textColor="#B2B2B2" />

                            <TextView
                                android:id="@+id/about_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:paddingRight="10dp"
                                android:textColor="#b2b2b2"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <EditText
                            android:id="@+id/aboutEdit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:background="@android:color/transparent"
                            android:hint="About"
                            android:maxLength="250"
                            android:text=""
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <ImageView style="@style/DividerStyleFull" />

            <TextView
                android:id="@+id/error_about"
                style="@style/ValidationErrorTextView" />

            <Button
                android:id="@+id/button_save"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="20dp"
                android:background="@drawable/border_button_orange_2px"
                android:text="@string/save_changes" />

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/border_button_white_2px"
                android:text="@string/cancel" />
        </LinearLayout>
    </ScrollView>

    <com.ddscanner.ui.views.LoginView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:title="@string/profile_need_to_login" />
</RelativeLayout>
