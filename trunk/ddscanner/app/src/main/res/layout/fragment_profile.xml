<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:id="@+id/about"
    android:visibility="visible"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <ImageView
            android:id="@+id/user_avatar"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/avatar_profile_default"/>
        <TextView
            android:id="@+id/user_name"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_text"/>
        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@color/black_text"/>
            <TextView
                android:layout_marginLeft="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expert"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#ed1b24"/>
        </LinearLayout>
        <TextView
            android:id="@+id/user_about"
            android:visibility="gone"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="43dp"
            android:layout_marginRight="43dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#616161"
            android:textSize="13sp"
            />
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <LinearLayout
                android:background="@drawable/border_gray_100px"
                android:orientation="horizontal"
                android:layout_width="94dp"
                android:layout_height="42dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_comment_profile"/>
                <TextView
                    android:id="@+id/user_comments"
                    style="@style/ProfileNumberDivespotsSrtyle"
                    android:text="354"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:background="@drawable/border_gray_100px"
                android:orientation="horizontal"
                android:layout_width="94dp"
                android:layout_height="42dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_like_profile"/>
                <TextView
                    android:id="@+id/user_likes"
                    style="@style/ProfileNumberDivespotsSrtyle"
                    android:text="2K"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/border_gray_100px"
                android:orientation="horizontal"
                android:layout_width="94dp"
                android:layout_height="42dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_dislike_profile"/>
                <TextView
                    android:id="@+id/user_dislikes"
                    style="@style/ProfileNumberDivespotsSrtyle"
                    android:text="9"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        style="@style/DividerStyleFull"/>

    <ImageView
        android:layout_marginTop="15dp"
        style="@style/DividerStyleFull"/>
    <LinearLayout
        android:paddingTop="15dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_height="wrap_content"
                style="@style/CharacteristicsDiveSpotListIcons"
                android:src="@drawable/ic_profile_checkin"/>
            <LinearLayout
                android:layout_width="258dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    style="@style/CharacteristicsDiveSpotListTitle"
                    android:text="Check in"/>
                <TextView
                    android:id="@+id/checkin_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/depth_title"
                    android:text="230" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/ic_arrow"/>
        </LinearLayout>
        <ImageView
            style="@style/DividerStyle"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_height="wrap_content"
                style="@style/CharacteristicsDiveSpotListIcons"
                android:src="@drawable/ic_profile_added"/>
            <LinearLayout
                android:layout_width="258dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    style="@style/CharacteristicsDiveSpotListTitle"
                    android:text="@string/created"/>
                <TextView
                    android:id="@+id/added_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/depth_title"
                    android:text="230" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/ic_arrow"/>
        </LinearLayout>
        <ImageView
            style="@style/DividerStyle"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_height="wrap_content"
                style="@style/CharacteristicsDiveSpotListIcons"
                android:src="@drawable/ic_profile_edited"/>
            <LinearLayout
                android:layout_width="258dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    style="@style/CharacteristicsDiveSpotListTitle"
                    android:text="@string/edited_low"/>
                <TextView
                    android:id="@+id/edited_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/depth_title"
                    android:text="230" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/ic_arrow"/>
        </LinearLayout>
        <ImageView
            style="@style/DividerStyle"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_height="wrap_content"
                style="@style/CharacteristicsDiveSpotListIcons"
                android:src="@drawable/ic_profile_fav"/>
            <LinearLayout
                android:layout_width="258dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    style="@style/CharacteristicsDiveSpotListTitle"
                    android:text="@string/favourites"/>
                <TextView
                    android:id="@+id/favourites_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/depth_title"
                    android:text="230" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/ic_arrow"/>
        </LinearLayout>
        <ImageView
            android:layout_marginTop="10dp"
            style="@style/DividerStyleFull"/>
        <LinearLayout
            android:background="?attr/selectableItemBackground"
            android:id="@+id/edit_profile"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <ImageView
                style="@style/CharacteristicsDiveSpotListIcons"
                android:src="@drawable/ic_profile_edit"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_width="258dp"
                android:layout_height="match_parent"
                style="@style/CharacteristicsDiveSpotListTitle"
                android:text="@string/edit_profile"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/ic_arrow"/>
        </LinearLayout>
        <ImageView
            style="@style/DividerStyleFull"/>
        <LinearLayout
            android:id="@+id/logout"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <ImageView
                style="@style/CharacteristicsDiveSpotListIcons"
                android:src="@drawable/ic_profile_logout"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_width="258dp"
                android:layout_height="match_parent"
                style="@style/CharacteristicsDiveSpotListTitle"
                android:text="Log out"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/ic_arrow"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</ScrollView>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:visibility="gone"
        android:id="@+id/editProfile"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="130dp"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:gravity="center"
                android:background="@drawable/shape_gray_oval">
                <ImageView
                    android:id="@+id/capture_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_attach_camera"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="46dp"
                android:layout_marginRight="46dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:background="@drawable/shape_gray_oval">
                <ImageView
                    android:id="@+id/user_chosed_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:gravity="center"
                android:background="@drawable/shape_gray_oval">
                <ImageView
                    android:id="@+id/pick_photo_from_gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_attach_gallery"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            style="@style/DividerStyleFull" />
        <ImageView
            android:layout_marginTop="15dp"
            style="@style/DividerStyleFull" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
            <LinearLayout
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:minHeight="70dp">

                <ImageView
                    android:layout_marginTop="3dp"
                    android:layout_height="wrap_content"
                    style="@style/CharacteristicsDiveSpotListIcons"
                    android:src="@drawable/ic_profile_user"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_height="wrap_content"
                        style="@style/AddDsCharTitleStyle"
                        android:text="@string/full_name"/>
                    <EditText
                        android:hint="Full name"
                        android:id="@+id/fullName"
                        android:background="@android:color/transparent"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"/>
                </LinearLayout>

            </LinearLayout>
            <ImageView
                style="@style/DividerStyle" />
            <LinearLayout
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:minHeight="70dp">

                <ImageView
                    android:layout_marginTop="3dp"
                    android:layout_height="wrap_content"
                    style="@style/CharacteristicsDiveSpotListIcons"
                    android:src="@drawable/ic_profile_about"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_height="wrap_content"
                        style="@style/AddDsCharTitleStyle"
                        android:text="@string/about"/>
                    <EditText
                        android:id="@+id/aboutEdit"
                        android:background="@android:color/transparent"
                        android:text=""
                        android:hint="About"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <ImageView
            style="@style/DividerStyleFull" />
        <Button
            android:id="@+id/button_save"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/border_button_orange_2px"
            android:text="@string/save_changes"
            />
        <com.rey.material.widget.Button
            android:id="@+id/cancel_button"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/border_button_white_2px"
            android:text="@string/cancel"
            app:rd_rippleType="touch"
            app:rd_backgroundColor="@color/gray"
            />
    </LinearLayout>
    </LinearLayout>