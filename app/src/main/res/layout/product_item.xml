<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/white"
    android:layout_marginTop="5dp"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/product_title"
        android:layout_width="wrap_content"
        android:layout_toLeftOf="@+id/product_logo"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/black_text"
        android:text="Rock back" />
    <TextView
        android:id="@+id/product_description"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_toLeftOf="@+id/product_logo"
        android:layout_alignParentLeft="true"
        android:textSize="14dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="5dp"
        android:fontFamily="roboto"
        android:textColor="#616161"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/product_title"
        android:text="It s a long established fact that a reader will be distracted by the readable content..."/>

    <LinearLayout
        android:layout_width="82dp"
        android:background="@color/money_background"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="103dp"
        android:layout_height="28dp">
        <ImageView
            android:layout_marginTop="6dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_money"
            android:layout_marginLeft="16dp"
            />
        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_text"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:text="1000"
            android:textSize="13dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_text"
            android:layout_marginLeft="1dp"
            android:textSize="13dp"
            android:layout_marginTop="5dp"
            android:text="$"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/product_logo"
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/list_photo"/>
    </RelativeLayout>